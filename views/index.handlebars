<div class="burgerbackground">
      <center><h1 class="apptitle">Eat The Burger</h1></center>
    </div>

      <div class="container-fluid">
        <div class ="row">
          <div class="col-md-4">
            <img src="/images/burgerbuntop.png" alt="burger bun" width=100%>
            <h3>Burgers to Devour</h3>
             <ul>
                  {{#each burgers}} 
                      {{#unless this.devoured}}
                  <li>    
                      {{this.burger_name}}  
                      <form method="POST" action="/devoured/{{this.id}}?_method=PUT">
                          <input type="hidden" name="devoured" value="true">
                          <button type="submit" name="burgerId" class="btn btn-danger center-block off-set-70">Devour it!</button>
                      </form>
                      <hr>
                  </li>
                    {{/unless}} 
                  {{/each}}
              </ul>
            
            <img src="/images/burgerbunbottom.png" alt="burger bun" width=100%>
          </div>
       

          <div class="col-md-4">
            <div class="panel panel-default">
              <div class="panel-heading">Add a Burger Name</div>
              <div class="panel-body">
                <div class="form-group" action="/" method="POST">
                <!-- <form class="create-update-form" action="/" method="POST"> -->
                  <input class="form-control" type="text" id="ca" name="name">
                  <input type="radio" name="devoured" value="1" > Devoured<br>
                  <input type="radio" name="devoured" value="0" checked> Not Devoured
                </div>
                <button class="btn btn-warning" type="submit">Add Burger</button>
                </div>
            </div>
          </div>


      <div class="col-md-4">
          <img src="/images/burgerbuntop.png" alt="burger bun" width=100%>
          <h3>The Devoured Burgers</h3>
            <table class="table table-striped table-hover ">
              <tbody>
              {{#each burgers}}
                {{#if this.devoured}}
                  <tr class="active">
                    <td>
                      {{this.burger_name}}

                      <form action="/{{this.id}}?_method=DELETE" method="POST">
                        <input type="hidden" name="devoured" value="false">
                        <button class="btn btn-success" type="submit">Delete</button>
                      </form>
                    </td>
                  </tr>
                {{/if}}
              {{/each}}
              </tbody>
            </table> 
            <img src="/images/burgerbunbottom.png" alt="burger bun" width=100%>
          </div>
      </div> <!-- row -->
    </div> 


